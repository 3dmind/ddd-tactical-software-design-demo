generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model BaseUserModel {
  @@map("BaseUser")
  baseUserId      String    @id
  updatedAt       DateTime  @updatedAt
  createdAt       DateTime
  username        String
  userPassword    String
  userEmail       String    @unique
  isEmailVerified Boolean   @default(false)
}

model TaskModel {
  @@map("Task")
  taskId      String    @id
  updatedAt   DateTime  @updatedAt
  description String
  createdAt   DateTime
  tickedOff   Boolean
  tickedOffAt DateTime?
  resumedAt   DateTime?
  editedAt    DateTime?
  archived    Boolean
  archivedAt  DateTime?
  discarded   Boolean
  discardedAt DateTime?
}
