{
  "name": "ddd-tactical-software-design-demo",
  "version": "0.0.1",
  "description": "Tactical Design Demo",
  "author": "c.wlatschiha@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -e .env -- nest start",
    "start:dev": "dotenv -e .env -- nest start --watch",
    "start:debug": "dotenv -e .env -- nest start --debug --watch",
    "start:prod": "dotenv -e .env -- node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env -- jest --config ./test/jest-e2e.json",
    "migrate:save": "dotenv -e .env -- prisma migrate save --experimental",
    "migrate:up": "dotenv -e .env -- prisma migrate up --experimental",
    "migrate:down": "dotenv -e .env -- prisma migrate down --experimental",
    "prisma:generate": "dotenv -e .env -- prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@prisma/client": "^2.10.2",
    "faker": "^5.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@prisma/cli": "^2.10.2",
    "@types/bluebird": "3.5.32",
    "@types/express": "^4.17.3",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.0",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.10",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.3",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4",
    "urlcat": "^2.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
